{
  "name": "Basic MCP Server",
  "description": "A basic Model Context Protocol server template that provides simple text processing capabilities. Perfect for getting started with MCP development.",
  "docker_image": "mcpplatform/basic-mcp",
  "docker_tag": "latest",
  "config_schema": {
    "type": "object",
    "properties": {
      "max_tokens": {
        "type": "integer",
        "title": "Maximum Tokens",
        "description": "Maximum number of tokens to process",
        "default": 1000,
        "minimum": 100,
        "maximum": 10000
      },
      "enable_logging": {
        "type": "boolean",
        "title": "Enable Logging",
        "description": "Enable detailed logging for debugging",
        "default": true
      },
      "api_key": {
        "type": "string",
        "title": "API Key",
        "description": "Optional API key for external services",
        "default": ""
      }
    },
    "required": ["max_tokens"]
  },
  "default_config": {
    "max_tokens": 1000,
    "enable_logging": true,
    "api_key": ""
  },
  "exposed_port": 8080,
  "environment_variables": {
    "MCP_PORT": "8080",
    "MCP_HOST": "0.0.0.0"
  },
  "volume_mounts": [],
  "version": "1.0.0",
  "author": "MCP Platform Team",
  "documentation_url": "https://docs.mcpplatform.com/templates/basic",
  "source_url": "https://github.com/mcpplatform/basic-mcp-server"
}
