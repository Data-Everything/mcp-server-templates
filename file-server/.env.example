# File Server MCP Environment Configuration

# Core Configuration
ROOT_PATH=/data
MAX_FILE_SIZE=10
READ_ONLY=false

# File Access Control
ALLOWED_EXTENSIONS=[".*"]
ENABLE_SUBDIRECTORIES=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_OPERATIONS=true
AUDIT_LOG_PATH=/logs/file_operations.log

# Server Configuration (optional)
MCP_HOST=0.0.0.0
MCP_PORT=8000
